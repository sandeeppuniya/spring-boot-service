<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
	   					   http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="applicationContext" class="com.example.com.example.util.ApplicationContextProvider"/>
    <bean id="fileStoreDaoImpl" class="com.example.dao.FileStoreDaoImpl"/>
    <bean id="fileService" class="com.example.service.FileServiceImpl"/>
    <bean id="javaMailSender" class="org.springframework.mail.javamail.JavaMailSenderImpl">
        <property name="host" value="smtp.gmail.com"/>
        <property name="port" value="25"/>
        <property name="username" value="sandypuniya@gmail.com"/>
        <property name="password" value="****"/>
        <property name="javaMailProperties">
            <props>
                <prop key="mail.transport.protocol">smtp</prop>
                <prop key="mail.smtp.auth">true</prop>
                <prop key="mail.smtp.starttls.enable">true</prop>
                <prop key="mail.debug">true</prop>
            </props>
        </property>
    </bean>
    <bean id="emailServiceImpl" class="com.example.service.EmailServiceImpl">
        <constructor-arg ref="javaMailSender"/>
    </bean>
</beans>